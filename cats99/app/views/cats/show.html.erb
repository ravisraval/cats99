<h1>Welcome to <%= @cat.name %>'s page!</h1>
<table>
  <tr>
    <th>Name: </th>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <th>Sex: </th>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <th>Color: </th>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <th>Age: </th>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <th>About me: </th>
    <td><%= @cat.description %></td>
  </tr>
</table>


<h2>Existing Requests on me</h2>
  <% @cat.rentalrequests.each do |req| %>
  Start date : <%=req.start_date%>, End date: <%=req.end_date%><br>
    <% if req.status == "PENDING"%>
      <%=button_to "Deny Request", cat_rental_request_url(req), method: :deny%>
    <%end%>
  <% end %>
