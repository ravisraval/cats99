

<% action_url = (action == :new) ? cats_url : cat_url(cat) %>

<form action="<%=action_url%>" method="post">
  <%if cat.persisted?%> <input name="_method" type="hidden" value="patch"/>
  <%end%>
  Name: <input type="text" name="name" value = <%= @cat.name %> ><br>
    Sex:
    <input type="radio" name="sex" value="M" <%='checked' if @cat.sex == 'M'%> >M
    <input type="radio" name="sex" value="F" <%='checked' if @cat.sex == 'F'%> >F<br>
    Color:
    <select name='color'>
      <% Cat::COLORS.each do |color| %>
      <option value=<%= color %> <%='selected' if @cat.color == color%> ><%= color %></option>
      <%end%>
    </select><br>
    Birth_date: <input name="birth_date" type="date" value = <%= @cat.birth_date %>><br>
    Description:<br> <textarea name="description" ><%= @cat.description%></textarea>
    <br>
  <input type="submit">
</form>
